# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

# Java source files
[*.java]
indent_style = tab
indent_size = 4
max_line_length = 120
continuation_indent_size = 8

# XML files (pom.xml, etc.)
[*.xml]
indent_style = tab
indent_size = 4

# YAML files (GitHub Actions, application.yml)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# Properties files
[*.properties]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Groovy files (for tests)
[*.groovy]
indent_style = tab
indent_size = 4

# Gradle files
[*.gradle]
indent_style = space
indent_size = 4

# Maven wrapper
[mvnw]
end_of_line = lf

# Git files
[.gitattributes]
indent_style = space
indent_size = 2

[.gitignore]
indent_style = space
indent_size = 2

# Configuration files
[.editorconfig]
indent_style = space
indent_size = 2
